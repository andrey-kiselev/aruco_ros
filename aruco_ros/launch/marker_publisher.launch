<launch>

    <arg name="markerSize"      default="0.08"/>    <!-- in m -->
<!-- <arg name="side"            default="left"/> -->
    <arg name="ref_frame"       default="base"/>  <!-- leave empty and the pose will be published wrt param parent_name -->
    <arg name="cam_frame"       default="camera_link"/>  <!-- leave empty and the pose will be published wrt param parent_name -->


    <node pkg="aruco_ros" type="marker_publisher" name="aruco_marker_publisher" output="screen">
	<!-- use openni2 camera topics for rectified image -->
        <remap from="/camera_info" to="/camera/projector/camera_info" />
        <remap from="/image" to="/camera/rgb/image_rect_color" />
        <param name="image_is_rectified" value="True"/>
        <param name="marker_size"        value="$(arg markerSize)"/>
        <param name="reference_frame"    value="$(arg ref_frame)"/>   <!-- frame in which the marker pose will be refered -->
        <param name="camera_frame"       value="$(arg cam_frame)"/>
    </node>

</launch>

